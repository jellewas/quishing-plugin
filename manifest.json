{
  "manifest_version": 3,
  "name": "QR Code Scanner",
  "version": "1.0.0",
  "description": "Scan QR codes on any webpage and detect phishing attempts by analyzing URLs for suspicious domains and deceptive links.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/jsqr.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
